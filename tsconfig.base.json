{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@parrotly.io/constants": ["libs/constants/src/index.ts"],
      "@parrotly.io/extension-components": [
        "libs/extension-components/src/index.ts"
      ],
      "@parrotly.io/ui": ["libs/ui/src/index.ts"],
      "@parrotly.io/env": ["env.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
